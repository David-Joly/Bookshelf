@model IEnumerable<Bookshelf.Models.BookData>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Library</h1>

<p>
    <a asp-action="Create" style="color: white; text-align: center; padding-left: 10px; padding-right: 10px; padding-bottom: 2px; padding-top: 2px; background-color: #0050ff;border-radius:15px; font-family:Arial; font-size: 17px;">Add Book</a>
</p>

@foreach (var item in Model)
{
<div class="books_index">
    <div class="flip-card">
        <div class="flip-card-front">
            <img src="~/book.png" style="position:absolute;top:0%;">
            <p style="font-size:15px;"><br /><br /><br />

            @Html.DisplayFor(modelItem => item.Title)<br /> Written by <br />
            @Html.DisplayFor(modelItem => item.Author)
            </p>
        </div>
        <div class="flip-card-back">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) <br /> ~<br />
                @Html.ActionLink("Details", "Details", new { id = item.BookId }) <br />~<br />
                @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
            </p>
        </div>
    </div>
</div>

}
   
